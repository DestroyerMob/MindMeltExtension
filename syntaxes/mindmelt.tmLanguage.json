{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "MindMelt",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#expression"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#reserved-words"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.mindmelt",
				"match": "\\b(>|<|.)\\b"
			}]
		},
		"operators": {
			"patterns": [{
				"name": "keyword.operator.mindmelt",
				"match": "\\b(+|-|*|/|%)\\b"
			}]
		},
		"numbers": {
			"patterns": [{
				"name": "keyword.other.unit.suffix.interger.mindmelt",
				"match": "[0-9]"
			}]
		},
		"reserved-words": {
			"match": "\\b(>|<|.)\\b",
			"name": "entity.name.function.member.mindmelt"
		},
		"strings": {
			"name": "string.quoted.double.mindmelt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.mindmelt",
					"match": "\\\\."
				}
			]
		},
		"expression": {
			"patterns": [
				{"include": "#numbers"},
				{"include": "#strings"},
				{"include": "#operators"},
				{"include": "#reserved-words"}
			]
		}
	},
	"scopeName": "source.mindmelt"
}